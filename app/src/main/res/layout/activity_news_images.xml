<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000">
    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent" android:layout_height="30dp"/>
    <LinearLayout
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
        <ImageButton
                android:id="@+id/goback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:background="?android:attr/selectableItemBackground"
                android:src="@mipmap/ic_reply_white_24dp"
                />
        <ImageButton
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/white"
                android:src="@mipmap/ic_share_black_24dp"
                />
        <ImageButton
                android:id="@+id/forwarding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/white"
                android:src="@mipmap/ic_exit_to_app_black_24dp"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/nav"
            android:paddingBottom="@dimen/margin_5"
            android:orientation="horizontal"
            >
        <TextView
                android:id="@+id/index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:text="5"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:text="/"
                />
        <TextView
                android:id="@+id/all_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/margin_10"
                tools:text="25"
                />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
            <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="文本描述文本描述文本描述文本描述文本描述文本描述文本描述文本描"
                    />
        </ScrollView>
    </LinearLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/news_imgs"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_above="@id/describe"
            />
</RelativeLayout>