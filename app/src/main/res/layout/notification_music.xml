<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
        >
    <ImageView
            android:id="@+id/music_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/music_logo"
            android:layout_marginRight="@dimen/margin_10"
            />
    <ImageButton
            android:id="@+id/ctl_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bt_ellipse"
            android:src="@drawable/ic_play_arrow_black_24dp"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/music_image"
            android:layout_toLeftOf="@id/ctl_music"
            android:orientation="vertical">
        <TextView
                android:id="@+id/music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="18dp"
                android:text="歌曲名"
                />
        <TextView
                android:id="@+id/album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grav"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12dp"
                android:text="来自 《专辑名》"
                />
    </LinearLayout>
</RelativeLayout>